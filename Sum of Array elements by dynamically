#include <iostream>
#include <vector>
using namespace std;

int main() {
	int count,sum=0;
	// your code goes here
	vector<int> arr;
	cout<<"Input limit"<<endl;
	cin>>count;
	arr.resize(count);
	
	for(int i=0;i<=arr.size();i++){
		arr[i]=i;
		sum += arr[i];
	}
	cout<<"Sum of array elements"<<sum<<endl;
	return 0;
}
